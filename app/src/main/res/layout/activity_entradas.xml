<?xml version="1.0" encoding="utf-8"?>

    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="123dp">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="59dp"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:toolbarId="@+id/toolbar">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"></android.support.v7.widget.Toolbar>
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="codigohernancho.app.prueba.com.inventariodecompras.CREAR">

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:shrinkColumns="*"
        android:stretchColumns="*">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:text="Producto ID?"
                android:textAlignment="center"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editText_Producto_ID"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:text="123" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="112dp"
                android:text="Producto Actual?"
                android:textAlignment="center"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editText_Producto_Actual"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:text="123" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:text="EXP Ano?"
                android:textAlignment="center"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editText_EXP_Ano"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:text="2017" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:text="EXP Mes "
                android:textAlignment="center"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editText_EXP_Mes"
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:text="06"
                android:visibility="visible" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EXP Dia?"
                android:textAlignment="center"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editText_EXP_Dia"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:text="15" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <Button
            android:id="@+id/button_Insert_Data"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Insert Data" />

    </TableLayout>

</android.support.design.widget.CoordinatorLayout>